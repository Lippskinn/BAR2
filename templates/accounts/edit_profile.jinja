{# Page where a user can change his/her profile data
Author: Sebastian Brehm
#}
{% extends 'base.jinja' %}
{% block content %}
  <div class="container">
	<div class="row text-center">
        <div class="col-sm-12 col-sm-offset-1">
            <br>
        <form method="post">
            <input type="hidden" name="csrfmiddlewaretoken" value="{{ csrf_token }}">
             {% for error in  profile_form.non_field_errors() %}
                        <p class="alert alert-danger" role="alert">
                            {{ error }}
                        </p>
            {% endfor %}
            <div class="form-group">
            <input type="text" name="first_name" class="form-control input-lg" tabindex="4" placeholder="Vorname">
            </div>
            <div class="form-group">
            <input type="text" name="last_name" class="form-control input-lg" tabindex="4" placeholder="Nachname">
            </div>
            <div class="form-group">
            <input type="text" name="email" class="form-control input-lg" tabindex="4" placeholder="E-Mail">
            </div>
            <div class="row">
            <button type="submit" class="btn btn-success btn-block btn-lg">Speichern</button>
            </div>
        </form>
       <br>
    </div>
    </div>
  </div>
{% endblock %}